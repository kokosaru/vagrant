<h1>Books</h1>
<table>
	<head>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</head>
<% @books.each do |book| %>
	<body>
		<tr>
			<td><%= book.book_title %></td>
			<td><%= book.book_body %></td>
	<td><%= link_to "Show" ,book_path(book.id) %></td>
	<td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
	<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-cofirm" => "Are you sure?" %></td>
		</tr>
		</body>
<% end %>
</table>
<main>
<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :book_title, class: "book_title" %>

	<h4>Body</h4>
	<%= f.text_area :book_body, class: "book_body" %>

	<%= f.submit 'create Book' %>
<% end %>
</main>



