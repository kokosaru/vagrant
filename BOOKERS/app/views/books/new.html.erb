<h1>Books</h1>
<% @books.each do |book| %>
	<p>Title</p>
	<span><%= book.book_title %></span>
	<p>body</p>
	<span><%= book.book_body %></span>
	<%= link_to "Show" ,book_path(book.id) %>
	<%= link_to "Edit" ,edit_book_path(book.id) %>
	<%= link_to "Destroy", book_path(book.id), method: :delete %>
<% end %>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :book_title %>

	<h4>Body</h4>
	<%= f.text_area :book_body %>

	<%= f.submit 'create Book' %>
<% end %>



