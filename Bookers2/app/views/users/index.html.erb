<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<h2>User info</h2>
			<%= @user.name %><br>
			 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
			<br><%= link_to "プロフィール編集", edit_user_path(@user) %></br>
			<br><%= @user.int %></br>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>

			<h4>title</h4>
			<%= f.text_field :title, class:"book_title"%>

			<h4>body</h4>
			<%= f.text_area :body, class:"book_body"%>

			<p><%= f.submit 'createbook' %></p>
		<% end %>
		</div>
		<div class="col-lg-8">
			<table class="table">
			<thead>
				<th>image</th>
				<th>name</th>
			</thead>
		<% @users.each do |user| %>
			<tbody>
			<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %> 
			<td><%= user.name %></td>
			<td><%= link_to "show", user_path(user.id) %>
			<% end %>
			</tbody>
		</div>
	</table>
	</div>
</div>
