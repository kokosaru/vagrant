<div class="container">
	<div class="row">
		<div class="col-lg-4">
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>

			<h4>title</h4>
			<%= f.text_field :title, class:"book_title"%>

			<h4>body</h4>
			<%= f.text_area :body, class:"book_body"%>

			<p><%= f.submit 'createbook' %></p>
		<% end %>
		</div>
		<div class="col-lg-8">
			<table class="table">
			<thead>
				<th>title</th>
				<th>body</th>
			</thead>
		<% @books.each do |book| %>
			<tbody>
			<td><%= link_to book.title,book_path(book.id) %></td>
			<td><%= book.body %></td>
			<% end %>
			</tbody>
		</div>
	</table>
	</div>
</div>
